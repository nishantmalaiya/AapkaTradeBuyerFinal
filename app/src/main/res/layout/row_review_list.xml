<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten_dip">

        <RelativeLayout
            android:id="@+id/relativeRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_background"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/ten_dip"
                android:paddingRight="@dimen/five_dip">

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imgStar"
                    android:layout_width="@dimen/twenty_dip"
                    android:layout_height="@dimen/twenty_dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/five_dip"
                    android:layout_toRightOf="@+id/tvRating"
                    android:src="@drawable/ic_white_star" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dip"
                android:layout_toRightOf="@+id/relativeRating"
                android:text="Review After 2 month use"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </RelativeLayout>


        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeRatingBar"
            android:layout_marginTop="@dimen/ten_dip"
            android:text="Phone is amazing. Nice display, nice camera, smooth touch, design is superb. The only thing I didn't like is the sim card thing. The only thing I did not like is the sim card thing." />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMessage"
            android:layout_marginTop="@dimen/ten_dip">

            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/five_dip"
                android:layout_toLeftOf="@+id/relativeCertified"
                android:text="Rohan Strike"
                android:textColor="@color/orange" />


            <RelativeLayout
                android:id="@+id/relativeCertified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"

                >

                <ImageView
                    android:id="@+id/imgCertified"
                    android:layout_width="@dimen/twenty_five_dip"
                    android:layout_height="@dimen/twenty_five_dip"
                    android:background="@drawable/ic_certified" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five_dip"
                    android:layout_toRightOf="@+id/imgCertified"
                    android:text="Certified Buyer"
                    android:textColor="@color/green" />


            </RelativeLayout>


            <TextView
                android:id="@+id/deliver_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/relativeCertified"
                android:text="21 Oct, 2016"
                android:textColor="@color/green"
                android:textSize="@dimen/fifteen_dip" />


        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>