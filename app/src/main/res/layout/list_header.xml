<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/cardview_list_container"
    android:layout_marginTop="@dimen/ten_dip"
    android:layout_marginLeft="@dimen/ten_dip"
    android:layout_marginRight="@dimen/ten_dip"
    android:layout_height="@dimen/fifty_dip">


    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:gravity="left"

            android:id="@+id/list_home_icon"

            android:background="@drawable/left_curve_green"

            android:layout_alignParentLeft="true"
            android:layout_height="match_parent">
<ImageView
    android:layout_width="@dimen/twenty_dip"
    android:src="@drawable/ic_arrow_list"
    android:layout_centerVertical="true"
    android:layout_marginLeft="@dimen/ten_dip"
    android:layout_centerHorizontal="true"
    android:layout_height="@dimen/twenty_dip" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="categoryname"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/list_home_icon"
            android:id="@+id/listfootername"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/fifteen_dip"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="wrap_content"

            android:background="@drawable/right_curve_green"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_height="match_parent">

<TextView
    android:layout_width="wrap_content"
    android:id="@+id/tv_list_quantity"
    android:text="500"
    android:textColor="@color/white"
    android:layout_centerVertical="true"

    android:layout_marginRight="@dimen/ten_dip"
    android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>