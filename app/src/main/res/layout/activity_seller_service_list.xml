<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aapkatrade.buyer.seller.selleruser_dashboard.serviceenquiryList.ServiceEnquiryActivity">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbar_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/toolbar_layout" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <include layout="@layout/content_company_shop_management" />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/sixty_dip"
        android:layout_height="@dimen/sixty_dip"
        android:orientation="vertical"
        android:background="@drawable/circle_voilet"
        android:padding="@dimen/ten_dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/btnAdd_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
       android:rotation="-25"

            android:scaleType="fitCenter"
            android:src="@drawable/ic_add_service"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


</RelativeLayout>
