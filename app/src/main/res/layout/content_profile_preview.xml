<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.florent37.parallax.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:orientation="vertical">

            <include layout="@layout/my_profile_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#EEEEEE"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHARE AAPKA TRADE /INVITE YOUR FRIENDS"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgvew_fb"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/facebook_icon" />

                    <ImageView
                        android:id="@+id/imgvew_twitter"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/twittericon" />

                    <ImageView
                        android:id="@+id/imgvew_whatsapp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_whatapp" />

                    <ImageView
                        android:id="@+id/imgvew_google_plus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:padding="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/gplus" />

                    <ImageView
                        android:id="@+id/img_sms"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/sms_icon" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <!--   <com.balysv.materialripple.MaterialRippleLayout
