<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/ten_dip"
  android:backgroundTint="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

       <View
           android:id="@+id/View1"
           android:layout_width="5dp"
           android:background="@color/green"
           android:layout_height="@dimen/sixty_dip"></View>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/fourty_dip"
            android:layout_height="@dimen/fourty_dip"
            android:layout_toRightOf="@+id/View1"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accomodation"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_marginLeft="@dimen/fifteen_dip"
            android:textColor="@color/black"
            />

        <RelativeLayout
            android:layout_width="@dimen/fifty_dip"
            android:layout_height="@dimen/fifty_dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ten_dip"
            android:background="@drawable/circle_gray_back"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_left_arrow"
                />


        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>