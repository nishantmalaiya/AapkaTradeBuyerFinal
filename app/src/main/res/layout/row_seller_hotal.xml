<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/cb_background"
    >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="@dimen/ten_dip"
        android:layout_marginLeft="@dimen/twenty_dip"
        android:layout_marginRight="@dimen/twenty_dip"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:id="@+id/linear_hotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_dip"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/imgMore"
                android:layout_marginLeft="@dimen/one_hundred_twenty_dip"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Svenska Design Hotel"
                    android:textSize="@dimen/eighteen"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/five_dip"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="India"
                    android:textSize="@dimen/sixteen"
                    android:layout_marginLeft="@dimen/five_dip"
                    android:layout_marginTop="@dimen/five_dip"
                    android:textColor="@color/green"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bihar"
                    android:layout_marginLeft="@dimen/five_dip"
                    android:layout_marginTop="@dimen/five_dip"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_circle"
                android:layout_marginTop="@dimen/fourty_dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ten_dip"
                android:rotation="90"
                />



        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <!--<ImageView
        android:layout_width="@dimen/one_hundred_five_dip"
        android:layout_height="@dimen/one_hundred_five_dip"
        android:background="@drawable/button_green_back"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ten_dip"
        />-->

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardImage"
        android:layout_width="@dimen/one_hundred_five_dip"
        android:layout_height="@dimen/one_hundred_five_dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ten_dip"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        >


        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="@dimen/one_hundred_five_dip"
            android:layout_height="@dimen/one_hundred_five_dip"
            >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="@dimen/one_hundred_five_dip"
                android:layout_height="@dimen/one_hundred_five_dip"
                android:src="@android:color/holo_red_dark"
                />



        </RelativeLayout>

        <!--<ImageView
            android:id="@+id/roundedImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/honda_navi"
            android:background="@color/white"
            android:scaleType="centerCrop"
            />-->




    </android.support.v7.widget.CardView>



    <Button
        android:layout_width="@dimen/one_hundred_twenty_dip"
        android:layout_height="@dimen/thirty_five_dip"
        android:text="Delete"
        android:background="@drawable/button_green_back"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/ten_dip"
        android:layout_marginBottom="@dimen/fifteen_dip"
        />




    </RelativeLayout>