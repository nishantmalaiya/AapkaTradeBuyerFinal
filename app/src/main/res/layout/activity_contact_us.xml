<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1F5F8"
    android:isScrollContainer="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/toolbar_layout" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dip"
                android:layout_marginLeft="@dimen/ten_dip"
                app:cardBackgroundColor="@color/white"
                android:layout_marginRight="@dimen/ten_dip"
                android:layout_marginTop="@dimen/ten_dip">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/ten_dip">


                    <LinearLayout
                        android:id="@+id/LinearlayoutImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"

                        tools:ignore="RtlHardcoded">


                        <ImageView
                            android:layout_width="@dimen/seventy_dip"
                            android:layout_height="@dimen/seventy_dip"
                            android:contentDescription="@string/type_image"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_customer_care" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dip"
                        android:layout_toRightOf="@+id/LinearlayoutImage"

                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:id="@+id/tvCustomerCareHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="@string/customer_care"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen_dip"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />


                        <ImageView
                            android:id="@+id/imgPhone"
                            android:layout_width="@dimen/twenty_dip"
                            android:layout_height="@dimen/twenty_dip"
                            android:layout_below="@+id/tvCustomerCareHeading"
                            android:layout_marginTop="@dimen/five_dip"
                            android:contentDescription="@string/type_image"
                            android:src="@drawable/ic_phone_orange" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvCustomerCareHeading"
                            android:layout_marginLeft="@dimen/five_dip"
                            android:layout_marginTop="@dimen/two_dip"
                            android:layout_toRightOf="@+id/imgPhone"
                            android:text="@string/customer_care_no"
                            android:textColor="@color/black"
                            tools:ignore="RtlHardcoded" />


                        <ImageView
                            android:id="@+id/imgEmail"
                            android:layout_width="@dimen/twenty_dip"
                            android:layout_height="@dimen/twenty_dip"
                            android:layout_below="@+id/imgPhone"
                            android:layout_marginTop="@dimen/five_dip"
                            android:contentDescription="@string/type_image"
                            android:src="@drawable/ic_email" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgPhone"
                            android:layout_marginLeft="@dimen/five_dip"
                            android:layout_marginTop="@dimen/two_dip"
                            android:layout_toRightOf="@+id/imgEmail"
                            android:text="@string/web_info_live_url"
                            android:textColor="@color/black"
                            tools:ignore="RtlHardcoded" />


                    </RelativeLayout>


                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dip"
                app:cardBackgroundColor="@color/white"
                android:layout_marginLeft="@dimen/ten_dip"
                android:layout_marginRight="@dimen/ten_dip">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/ten_dip">


                    <LinearLayout
                        android:id="@+id/LinearlayoutFollow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"

                        tools:ignore="RtlHardcoded">


                        <com.aapkatrade.buyer.uicomponent.customimageview.MyImageView
                            android:id="@+id/imageView"
                            android:layout_width="@dimen/seventy_dip"
                            android:layout_height="@dimen/seventy_dip"
                            android:contentDescription="@string/type_image"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_follow_us" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dip"
                        android:layout_toRightOf="@+id/LinearlayoutFollow"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:id="@+id/tvFollowHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/follow_us"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen_dip"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvFollowHeading"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/thirty_dip"
                                android:layout_height="@dimen/thirty_dip"
                                android:layout_marginTop="@dimen/five_dip"
                                android:contentDescription="@string/type_image"
                                android:scaleType="fitXY"
                                android:src="@drawable/facebook_icon" />

                            <ImageView
                                android:layout_width="@dimen/thirty_dip"
                                android:layout_height="@dimen/thirty_dip"
                                android:layout_margin="@dimen/five_dip"
                                android:contentDescription="@string/type_image"
                                android:scaleType="fitXY"
                                android:src="@drawable/twittericon" />

                            <ImageView
                                android:layout_width="@dimen/thirty_dip"
                                android:layout_height="@dimen/thirty_dip"
                                android:layout_margin="@dimen/five_dip"
                                android:contentDescription="@string/type_image"
                                android:scaleType="fitXY"
                                android:src="@drawable/icon_whatapp" />

                            <ImageView
                                android:layout_width="@dimen/thirty_dip"
                                android:layout_height="@dimen/thirty_dip"
                                android:layout_margin="@dimen/five_dip"
                                android:contentDescription="@string/type_image"
                                android:scaleType="fitXY"
                                android:src="@drawable/gplus" />


                        </LinearLayout>


                    </RelativeLayout>


                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dip"
                android:layout_marginLeft="@dimen/ten_dip"
                app:cardBackgroundColor="@color/white"
                android:layout_marginRight="@dimen/ten_dip">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/ten_dip">


                    <LinearLayout
                        android:id="@+id/LinearlayoutVisit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"

                        tools:ignore="RtlHardcoded">


                        <ImageView
                            android:layout_width="@dimen/seventy_dip"
                            android:layout_height="@dimen/seventy_dip"
                            android:contentDescription="@string/type_image"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_visit_us" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen_dip"
                        android:layout_marginTop="@dimen/ten_dip"
                        android:layout_toRightOf="@+id/LinearlayoutVisit"
                        tools:ignore="RtlHardcoded">


                        <TextView
                            android:id="@+id/tvVisitHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/visit_us"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen_dip"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvVisitHeading"
                            android:text="@string/web_live_url"
                            android:textColor="@color/black" />


                    </RelativeLayout>


                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twenty_dip"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_marginRight="@dimen/ten_dip">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_etSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/twenty_dip"
                    android:textColorHint="@color/hint_color">

                    <EditText
                        android:id="@+id/etSubject"
                        style="@style/myedittext"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty_dip"
                        android:layout_below="@+id/relativeQuestion"
                        android:hint="@string/subject"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_dip"
                        android:textColorHint="@color/green"
                        android:textSize="@dimen/textsize"
                        android:theme="@style/myedittext"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_etSubject"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:textColorHint="@color/hint_color">

                    <EditText
                        android:id="@+id/etUserName"
                        style="@style/myedittext"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty_dip"
                        android:layout_below="@+id/input_layout_etSubject"
                        android:hint="@string/user_name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_dip"
                        android:textColorHint="@color/green"
                        android:textSize="@dimen/textsize"
                        android:theme="@style/myedittext"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_MobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_UserName"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:textColorHint="@color/hint_color">

                    <EditText
                        android:id="@+id/etMobileNo"
                        style="@style/myedittext"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty_dip"
                        android:layout_below="@+id/etUserName"
                        android:hint="@string/mobile_no"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_dip"
                        android:textColorHint="@color/green"
                        android:textSize="@dimen/textsize"
                        android:theme="@style/myedittext"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_MobileNo"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:textColorHint="@color/hint_color">


                    <EditText
                        android:id="@+id/etEmail"
                        style="@style/myedittext"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty_dip"
                        android:layout_below="@+id/etMobileNo"
                        android:hint="@string/email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_dip"
                        android:textColorHint="@color/green"
                        android:textSize="@dimen/textsize"
                        android:theme="@style/myedittext"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_query"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_Email"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:textColorHint="@color/hint_color">

                    <EditText
                        android:id="@+id/etQuery"
                        style="@style/myedittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/query"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingLeft="@dimen/ten_dip"
                        android:textColorHint="@color/green"
                        android:textSize="@dimen/textsize"
                        android:theme="@style/myedittext"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />


                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty_dip"
                    android:layout_below="@+id/input_layout_query"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/twenty_dip"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/twenty_dip"
                    android:background="@drawable/orange_back"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/submit"
                    android:textColor="@color/white" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>


