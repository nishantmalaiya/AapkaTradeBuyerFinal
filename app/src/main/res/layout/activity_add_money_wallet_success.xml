<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aapkatrade.buyer.wallet.AddMoneyWalletSuccessActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twelve_dip"
        android:layout_marginBottom="@dimen/ten_dip"
        android:layout_marginLeft="@dimen/ten_dip"
        android:layout_marginRight="@dimen/ten_dip"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgCheck"
                android:layout_width="@dimen/sixty_dip"
                android:layout_height="@dimen/sixty_dip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_check"
                android:layout_marginBottom="@dimen/ten_dip"
                android:layout_marginTop="@dimen/ten_dip"
                />

            <TextView
                android:id="@+id/txtAddedHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Added to Aapka Account"
                android:layout_below="@+id/imgCheck"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ten_dip"
                android:layout_marginBottom="@dimen/twelve_dip"
                android:textColor="@color/black"
                />

            <View
                android:id="@+id/View1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txtAddedHeading"
                android:background="@color/black"

                ></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/View1"
                android:layout_marginTop="@dimen/twelve_dip"
                android:padding="@dimen/ten_dip"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Added Successfully"
                    android:layout_centerVertical="true"
                    />

             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="@dimen/fourty_dip"
                 android:layout_alignParentRight="true"
                 android:text="500"
                 android:textColor="@color/white"
                 android:background="@drawable/add_money_vollet_button"
                 />

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dip"
        android:padding="@dimen/fifteen_dip"
        android:background="@drawable/button_green_back"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Money"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dip"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txtBankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="From: National Bank"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/ten_dip"
                />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="June 28, 06:54"
                android:textColor="@color/green"
                android:layout_marginTop="@dimen/ten_dip"
                android:layout_below="@+id/txtBankName"
                />

            <TextView
                android:id="@+id/txtWalletTransactionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Wallet Txn ID:256211332"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/ten_dip"
                android:layout_below="@+id/txtDate"
                />


            <TextView
                android:id="@+id/txtBankTransactionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Bank Txn ID:256211332"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/ten_dip"
                android:layout_below="@+id/txtWalletTransactionId"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fourty_dip"
                android:layout_below="@+id/txtBankTransactionId"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/twelve_dip"
                android:layout_marginBottom="@dimen/twelve_dip"
                android:text="Need Help?"
                android:textColor="#C84D5F"
                android:background="@drawable/add_wallet_money_help"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
