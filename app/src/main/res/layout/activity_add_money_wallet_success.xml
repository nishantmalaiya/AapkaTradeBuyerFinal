<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e8ebf2"
    tools:context="com.aapkatrade.buyer.wallet.AddMoneyWalletSuccessActivity">


    <include
        android:id="@+id/includeLayout"
        layout="@layout/toolbar_layout" />



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twelve_dip"
        android:layout_marginBottom="@dimen/ten_dip"
        android:layout_marginLeft="@dimen/ten_dip"
        android:layout_marginRight="@dimen/ten_dip"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgCheck"
                android:layout_width="@dimen/sixty_dip"
                android:layout_height="@dimen/sixty_dip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_check"
                android:layout_marginBottom="@dimen/ten_dip"
                android:layout_marginTop="@dimen/ten_dip"
                />

            <TextView
                android:id="@+id/txtAddedHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Added to Aapka Account"
                android:layout_below="@+id/imgCheck"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ten_dip"
                android:layout_marginBottom="@dimen/twelve_dip"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty_dip"
                />

            <View
                android:id="@+id/View1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txtAddedHeading"
                android:background="@color/black"

                ></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/View1"
                android:layout_marginTop="@dimen/twelve_dip"
                android:padding="@dimen/ten_dip"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Added Successfully"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/twenty_dip"
                    />

             <Button
                 android:id="@+id/buttonAmount"
                 android:layout_width="wrap_content"
                 android:layout_height="@dimen/fourty_dip"
                 android:layout_alignParentRight="true"
                 android:text=""
                 android:textSize="@dimen/twenty_dip"
                 android:textColor="@color/white"
                 android:background="@drawable/add_money_vollet_button"
                 />

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dip"
        android:padding="@dimen/fifteen_dip"
        android:background="@drawable/button_green_back"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twenty_dip"
            android:text="Add Money"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dip"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="June 28, 06:54"
                android:textColor="@color/green"
                android:layout_marginTop="@dimen/fifteen_dip"
                android:textSize="@dimen/twenty_dip"
                android:textStyle="bold"
                />



            <TextView
                android:id="@+id/txtBankTransactionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Bank Txn ID:256211332"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/fifteen_dip"
                android:textSize="@dimen/twenty_dip"
               android:layout_below="@+id/txtDate"
                />

            <Button
                android:id="@+id/buttonHelp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fifty_dip"
                android:layout_below="@+id/txtBankTransactionId"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fifteen_dip"
                android:layout_marginBottom="@dimen/fifteen_dip"
                android:text="Need Help?"
                android:textColor="#C84D5F"
                android:textSize="@dimen/twenty_dip"
                android:padding="@dimen/five_dip"
                android:background="@drawable/add_wallet_money_help"
                />


         <RelativeLayout
                android:id="@+id/rlDoneLayout"
                android:layout_width="@dimen/one_hundred_fifty_dip"
                android:layout_height="@dimen/fifty_dip"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="@dimen/ten_dip"
                android:layout_marginRight="@dimen/ten_dip"
                android:background="@color/green"
                android:layout_below="@+id/buttonHelp"
                android:layout_centerHorizontal="true"
               android:layout_marginBottom="@dimen/fifteen_dip"
             >

                <ImageView
                    android:id="@+id/doneIcon"
                    android:layout_width="@dimen/fifty_dip"
                    android:layout_height="@dimen/fifty_dip"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/fifteen_dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_done"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/tvDone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/doneIcon"
                    android:gravity="center"
                    android:text="@string/done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twenty_dip"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />


            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
