<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_more_light2"
    android:orientation="vertical">



    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar_layout" />



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:layout_above="@+id/buttonSave"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <com.aapkatrade.buyer.uicomponent.customcardview.CustomCardViewHeader
                android:id="@+id/deliveryHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleText="Delivery Address"
                app:leftSrc="@drawable/ic_business_img"
                app:rightSrc="@drawable/ic_down"

                />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dip"
                app:cardBackgroundColor="@color/white"
                android:layout_below="@+id/deliveryHeader"
                app:cardElevation="4dp">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="40dp"
                    >

                    <EditText
                        android:id="@+id/etFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:background="@drawable/edit_text_green_back"
                        android:hint="First Name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/ten_dip"
                        android:textColorHint="@color/hint_color"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/etMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etFirstName"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/twenty_dip"
                        android:background="@drawable/edit_text_green_back"
                        android:editable="false"
                        android:hint="Mobile No"
                        android:inputType="number"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:padding="@dimen/ten_dip"
                        android:textColorHint="@color/hint_color"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/etPincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etMobileNo"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/twenty_dip"
                        android:background="@drawable/edit_text_green_back"
                        android:hint="Pincode"
                        android:inputType="number"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:padding="@dimen/ten_dip"
                        android:textColorHint="@color/hint_color"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/etStateCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etPincode"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/twenty_dip"
                        android:background="@drawable/edit_text_green_back"
                        android:hint="State"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/ten_dip"
                        android:textColorHint="@color/hint_color"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/etCityCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etStateCategory"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/twenty_dip"
                        android:background="@drawable/edit_text_green_back"
                        android:hint="City"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/ten_dip"
                        android:textColorHint="@color/hint_color"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etCityCategory"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/twenty_dip"
                        android:background="@drawable/edit_text_green_back"
                        android:hint="Address"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/ten_dip"
                        android:textColorHint="@color/hint_color"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etLandMark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etAddress"
                        android:layout_marginBottom="@dimen/twenty_five_dip"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/twenty_dip"
                        android:background="@drawable/edit_text_green_back"
                        android:hint="landMark"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/ten_dip"
                        android:textColorHint="@color/hint_color"
                        android:textSize="14sp" />


                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dip"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/twenty_dip"
        android:background="@drawable/orange_back"
        android:padding="@dimen/ten_dip"
        android:text="Submit"
        android:textColor="@color/white" />


</RelativeLayout>