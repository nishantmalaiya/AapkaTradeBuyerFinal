<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/fifteen_dip"
    app:cardCornerRadius="10dp">

    <FrameLayout
        android:layout_width="@dimen/one_hundred_five_dip"
        android:layout_height="@dimen/one_hundred_five_dip">

        <RelativeLayout
            android:layout_width="wrap_content"


            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/previewImage"
                android:layout_width="@dimen/one_hundred_five_dip"
                android:layout_height="@dimen/one_hundred_five_dip"
                android:scaleType="fitXY"
                android:src="@drawable/default_noimage" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/previewImageLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/cancelImage"
                android:layout_width="@dimen/twenty_dip"
                android:layout_height="@dimen/twenty_dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:layout_marginBottom="@dimen/ten_dip"
                android:text="x"
                android:textStyle="bold"
                android:textSize="@dimen/fifteen_dip" />


            <ImageView
                android:id="@+id/play_image"
                android:layout_width="@dimen/thirty_dip"
                android:layout_height="@dimen/thirty_dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:src="@drawable/ic_play" />

        </RelativeLayout>


    </FrameLayout>
</android.support.v7.widget.CardView>