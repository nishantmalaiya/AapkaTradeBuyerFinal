<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"


    >

    <android.support.v7.widget.CardView

        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@color/grey">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"


                android:orientation="vertical">


                <RelativeLayout


                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"

                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/img_product_image_list"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"

                        android:scaleType="fitXY" />

                    <RelativeLayout
                        android:id="@+id/relativelayout_cart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="#66cccccc"
android:visibility="gone"
                        android:gravity="center_horizontal|center_vertical"

                   >

                        <RelativeLayout
                            android:id="@+id/rl_add_cart"
                            android:layout_width="wrap_content"
                            android:layout_toRightOf="@+id/rl_prt_information"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"

                         >

                            <ImageView
                                android:id="@+id/add_cart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="1dp"
                                android:scaleType="fitCenter"

                                android:src="@drawable/ic_product_description" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_prt_information"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                           >

                            <ImageView
                                android:id="@+id/img_product_information"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="1dp"

                                android:src="@drawable/ic_social_cart_grey" />
                        </RelativeLayout>

                    </RelativeLayout>


                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_productlist"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"

                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:minLines="2"
                    android:text="Smartphone" />

                <TextView
                    android:id="@+id/tv_productprize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="$250"
                    android:textColor="@color/color_voilet"
                    android:visibility="gone" />

                <io.techery.properratingbar.ProperRatingBar
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_horizontal"
                    app:prb_clickable="false"
                    app:prb_defaultRating="3"
                    app:prb_tickNormalDrawable="@drawable/ic_white_star"
                    app:prb_tickSelectedDrawable="@drawable/ic_orange_star"
                    app:prb_tickSpacing="0dp"
                    app:prb_totalTicks="5" />


            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_light">


    </View>

    <View
        android:id="@+id/view_left"
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:background="@color/grey_light" />

    <View
        android:id="@+id/view_right"
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:background="@color/grey_light" />


</RelativeLayout>