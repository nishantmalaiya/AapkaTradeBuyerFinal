<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_dip"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="@dimen/ten_dip"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:id="@+id/gridLayout"
            android:layout_width="@dimen/hundred_dip"
            android:layout_height="@dimen/hundred_dip"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/seventy_dip"
                    android:layout_height="@dimen/seventy_dip"
                    android:layout_centerHorizontal="true"

                    android:layout_centerVertical="true" />

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ten_dip"
        android:text="Accomadation"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="12sp" />

</RelativeLayout>