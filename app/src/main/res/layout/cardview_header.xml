<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/grey_cardview_header_background"
    app:cardCornerRadius="@dimen/five_dip"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/grey_cardview_header_background"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cardview_header_icon_left"
            android:layout_width="@dimen/thirty_dip"
            android:padding="@dimen/five_dip"
            android:layout_height="@dimen/thirty_dip"
            android:layout_margin="@dimen/ten_dip"

            android:src="@drawable/ic_business_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/cardview_header_tv_title"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_medium"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_toRightOf="@+id/cardview_header_icon_left"
            android:text="@string/bussiness_details" />


        <ImageView
            android:layout_width="@dimen/thirty_dip"
            android:layout_alignParentRight="true"
            android:padding="@dimen/seven_dip"
            android:layout_marginRight="@dimen/ten_dip"
            android:src="@drawable/ic_down"
            android:id="@+id/cardview_header_icon_right"
            android:layout_centerVertical="true"

            android:layout_height="@dimen/thirty_dip" />

    </RelativeLayout>
</android.support.v7.widget.CardView>