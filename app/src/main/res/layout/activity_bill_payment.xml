<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/billCompletionRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_transparent2"
    android:orientation="vertical"

    >

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="0.7"
            android:gravity="center_vertical|center_horizontal">

            <RelativeLayout
                android:id="@+id/img_machine_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/img_machine" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_machine_container"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/twenty_dip"
                android:text="@string/billpayment"
                android:textColor="@color/white" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="@dimen/ten_dip"
                android:id="@+id/containermachinetype"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">




              <android.support.v7.widget.RecyclerView
                  android:layout_width="match_parent"
                  android:id="@+id/recycleView_bill_payment"
                  android:layout_height="match_parent">



              </android.support.v7.widget.RecyclerView>







            </LinearLayout>





            <RelativeLayout
                android:id="@+id/rlDoneLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/seventy_dip"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@color/color_voilet"
                android:gravity="center_horizontal|center_vertical">

                <TextView
                    android:id="@+id/tvDone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/doneIcon"
                    android:gravity="center"
                    android:text="@string/paybill"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twenty_dip"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />


            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>






