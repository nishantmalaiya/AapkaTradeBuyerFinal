<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">


        <RelativeLayout
            android:id="@+id/linear_layout_image"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/orange_back">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_myprofile" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/linear_layout_image"
            android:background="@drawable/orange_back"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_profile_heading"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/screen_dark_gray_back"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvMyProfileDetailHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/my_profile_detail_heading"
                    android:textColor="@color/black" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ten_dip"
                    android:layout_marginLeft="@dimen/fourty_dip"
                    android:layout_marginRight="@dimen/fourty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:background="@drawable/edit_text_green_back">


                    <EditText
                        android:id="@+id/etFName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="@dimen/five_dip"
                        android:layout_marginRight="@dimen/fourty_dip"
                        android:layout_marginTop="@dimen/five_dip"
                        android:ellipsize="none"
                        android:gravity="top"
                        android:background="@null"
                        android:hint="First Name"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_dip"
                        android:paddingTop="@dimen/ten_dip"
                        android:paddingBottom="@dimen/ten_dip"
                        android:textColor="@color/dialog_text"
                        android:textColorHint="@color/dialog_text" />



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ten_dip"
                    android:layout_marginLeft="@dimen/fourty_dip"
                    android:layout_marginRight="@dimen/fourty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:background="@drawable/edit_text_green_back">


                    <EditText
                        android:id="@+id/etLName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="@dimen/five_dip"
                        android:layout_marginRight="@dimen/fourty_dip"
                        android:layout_marginTop="@dimen/five_dip"
                        android:ellipsize="none"
                        android:gravity="top"
                        android:hint="Last Name"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:background="@null"
                        android:paddingLeft="@dimen/ten_dip"
                        android:paddingTop="@dimen/ten_dip"
                        android:paddingBottom="@dimen/ten_dip"
                        android:textColor="@color/dialog_text"
                        android:textColorHint="@color/dialog_text" />



                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="@dimen/ten_dip"
                    android:layout_marginLeft="@dimen/fourty_dip"
                    android:layout_marginRight="@dimen/fourty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:background="@drawable/edit_text_green_back">


                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="@dimen/five_dip"
                        android:layout_marginRight="@dimen/fourty_dip"
                        android:layout_marginTop="@dimen/five_dip"
                        android:ellipsize="none"
                        android:gravity="top"
                        android:background="@null"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_dip"
                        android:paddingTop="@dimen/ten_dip"
                        android:paddingBottom="@dimen/ten_dip"
                        android:textColor="@color/dialog_text"
                        android:textColorHint="@color/dialog_text" />

                    <ImageView
                        android:id="@+id/imgEmailEdit"
                        android:layout_width="@dimen/thirty_dip"
                        android:layout_height="@dimen/thirty_dip"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/five_dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_edit"
                        android:layout_centerVertical="true"
                        tools:ignore="RtlCompat" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="@dimen/ten_dip"
                    android:layout_marginLeft="@dimen/fourty_dip"
                    android:layout_marginRight="@dimen/fourty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:background="@drawable/edit_text_green_back">


                    <EditText
                        android:id="@+id/etMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="@dimen/five_dip"
                        android:layout_marginRight="@dimen/fourty_dip"
                        android:layout_marginTop="@dimen/five_dip"
                        android:ellipsize="none"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="Mobile"
                        android:inputType="number"
                        android:maxLines="10"
                        android:paddingLeft="@dimen/ten_dip"
                        android:paddingTop="@dimen/ten_dip"
                        android:paddingBottom="@dimen/ten_dip"
                        android:textColor="@color/dialog_text"
                        android:textColorHint="@color/dialog_text" />

                    <ImageView
                        android:id="@+id/imgMobileEdit"
                        android:layout_width="@dimen/thirty_dip"
                        android:layout_height="@dimen/thirty_dip"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/five_dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_edit"
                        android:layout_centerVertical="true"
                        tools:ignore="RtlCompat" />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="@dimen/ten_dip"
                    android:layout_marginLeft="@dimen/fourty_dip"
                    android:layout_marginRight="@dimen/fourty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:background="@drawable/edit_text_green_back">


                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="@dimen/five_dip"
                        android:layout_marginRight="@dimen/fourty_dip"
                        android:layout_marginTop="@dimen/five_dip"
                        android:ellipsize="none"
                        android:gravity="top"
                        android:hint="Address"
                        android:background="@null"
                        android:inputType="text"
                        android:maxLines="10"
                        android:paddingLeft="@dimen/ten_dip"
                        android:paddingTop="@dimen/ten_dip"
                        android:paddingBottom="@dimen/ten_dip"
                        android:textColor="@color/dialog_text"
                        android:textColorHint="@color/dialog_text" />


                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:visibility="gone">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/button_orange_back"
                            android:gravity="center"
                            android:text="@string/logout"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />


                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>
