<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/orders"
    android:layout_height="wrap_content"
    >



        <RelativeLayout
            android:id="@+id/relativeOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:background="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <RelativeLayout
                android:id="@+id/relativeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >


                <LinearLayout
                    android:id="@+id/linearLayoutImage"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:background="@drawable/edittext_black_border_back"
                    android:padding="5dp"
                    >


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImage"
                        android:layout_width="match_parent"


                        android:layout_height="match_parent"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/ll_order_date"
                    android:layout_toRightOf="@+id/linearLayoutImage"
                    android:layout_margin="@dimen/ten_dip"
                    android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="wrap_content"
                        android:text="654763457345"
                        android:id="@+id/productName"
                        android:layout_marginLeft="@dimen/ten_dip"
                        android:layout_height="match_parent" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_height="match_parent"></RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/ten_dip"


                    android:id="@+id/ll_order_prize"
                    android:layout_toRightOf="@+id/linearLayoutImage"
                    android:layout_below="@+id/ll_order_date"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Fri,12th may 2017"
                        android:id="@+id/tvOrderDate"
                        android:layout_marginLeft="@dimen/ten_dip"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:rotation="270"
                        android:id="@+id/img_order_detail"
                        android:src="@drawable/ic_chevron_grey"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_toRightOf="@+id/linearLayoutImage"
                    android:layout_below="@+id/ll_order_prize"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/ten_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/rupay_text"
                        android:layout_marginLeft="@dimen/ten_dip"
                        android:id="@+id/tv_rupey_icon"
                        android:layout_marginRight="@dimen/five_dip"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="200"
                        android:id="@+id/tvOrderPrize"
                        android:layout_toRightOf="@+id/tv_rupey_icon"

                        android:layout_height="wrap_content" />

                </RelativeLayout>








            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/ten_dip"
                android:weightSum="2"
                android:orientation="horizontal"

                android:layout_below="@+id/relativeContainer"
                android:layout_height="@dimen/fourty_dip">
                <Button
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="@string/trackorder_title"
                    android:id="@+id/track_order"
                    android:textColor="@color/white"
                    android:background="@color/greenshad_Order"
                    android:layout_margin="@dimen/two_dip"
                    android:layout_height="match_parent">

                </Button>

                <Button
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/btn_cancel_order"
android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/two_dip"
                    android:background="@color/greenshad_Order"
                    android:layout_height="match_parent">

                </Button>
            </LinearLayout>




        </RelativeLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_below="@+id/relativeOrderDetail"
        android:background="#D2D0D0"
        android:id="@+id/view"></View>



</RelativeLayout>