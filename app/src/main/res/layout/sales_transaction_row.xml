<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginLeft="@dimen/ten_dip"
    android:layout_marginRight="@dimen/ten_dip"
    android:layout_marginBottom="@dimen/ten_dip"

    android:layout_height="wrap_content"

    >



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_margin="@dimen/ten_dip"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/thirty_dip"
            android:src="@drawable/txn_id_icon"
            android:id="@+id/img_txn_id"
            android:layout_height="@dimen/thirty_dip" />
        <TextView
            android:id="@+id/tv_saleshistorietxnid"
            android:layout_width="wrap_content"
            android:textColor="@color/green"
            android:layout_toRightOf="@+id/img_txn_id"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_dip" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_saleshistories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dip" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dip">

        <TextView
            android:id="@+id/tvTxnStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:textColor="@color/green"
            android:layout_alignParentLeft="true"
            android:text="COMPLETE" />

        <TextView
            android:id="@+id/Salesamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#F8670E"
            />
    </RelativeLayout>




</LinearLayout>

</android.support.v7.widget.CardView>