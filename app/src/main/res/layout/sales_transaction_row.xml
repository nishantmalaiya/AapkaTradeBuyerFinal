<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ten_dip"
    android:layout_marginLeft="@dimen/ten_dip"
    android:layout_marginRight="@dimen/ten_dip"
    >


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dip"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dip"
            >

            <ImageView
                android:id="@+id/img_txn_id"
                android:layout_width="@dimen/thirty_dip"
                android:layout_height="@dimen/thirty_dip"
                android:src="@drawable/txn_id_icon" />

            <TextView
                android:id="@+id/tv_saleshistorietxnid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_txn_id"
                android:textSize="@dimen/fifteen_dip"
                android:layout_marginLeft="@dimen/five_dip"
                android:layout_marginTop="@dimen/five_dip"
                android:textColor="#33B8B3"
                android:textStyle="bold" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_saleshistories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_marginBottom="@dimen/five_dip"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dip"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_marginRight="@dimen/ten_dip">

            <TextView
                android:id="@+id/tvTxnStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="COMPLETE"
                android:textStyle="bold"
                android:textSize="@dimen/fifteen_dip"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/Salesamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/fifteen_dip"
                android:textStyle="bold"
                android:textColor="#F8670E" />
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>