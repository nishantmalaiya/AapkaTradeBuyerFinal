<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/circleImageLinearLayout"
        android:layout_width="@dimen/hundred_dip"
        android:background="@drawable/circle_white"
        android:padding="@dimen/ten_dip"
        android:gravity="center_horizontal"
        android:layout_height="@dimen/hundred_dip">

        <ImageView
            android:id="@+id/circleImageView"
            android:layout_width="@dimen/seventy_dip"
            android:layout_height="@dimen/seventy_dip"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:scaleType="fitCenter"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"

        android:gravity="center_horizontal|center_vertical"
        android:text="@string/pos"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_dip"
        android:textStyle="bold"
        android:maxLines="2"
        android:minLines="2"
        tools:ignore="SpUsage" />




</LinearLayout>